<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_layout"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="#424242"
    android:clickable="false"
    tools:context="com.skyweather.DataFragment"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/tempvalue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="..."
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#fffdfdfe"
        android:textSize="110sp"
        android:layout_marginBottom="87dp"
        android:layout_above="@+id/icon"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="°"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#fffdfdfe"
        android:textSize="100sp"
        android:layout_alignTop="@+id/tempvalue"
        android:layout_toRightOf="@+id/tempvalue"
        android:layout_toEndOf="@+id/tempvalue" />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:tint="#ffffffff"
        android:padding="5dp"
        android:layout_centerInParent="true" />

    <LinearLayout
        android:id="@+id/Stats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#424242"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:shadowColor="#0000ff"
        android:shadowDx="2"
        android:shadowDy="4"
        android:shadowRadius="2"
        android:padding="5dp"
        android:layout_marginBottom="40dp"
        android:layout_above="@+id/weekDays"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/imageView3"
            android:background="@drawable/up"
            android:layout_alignTop="@+id/Stats"
            android:layout_toLeftOf="@+id/Stats"
            android:layout_toStartOf="@+id/Stats"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ffffffff"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="20sp"
            android:text="..." />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="|"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ffffffff"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ffffffff"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="20sp"
            android:text="..." />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/imageView4"
            android:background="@drawable/down"
            android:layout_alignTop="@+id/Stats"
            android:layout_toRightOf="@+id/Stats"
            android:layout_toEndOf="@+id/Stats"
            android:layout_gravity="center_vertical" />

    </LinearLayout>

    <!--<TextView-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:textAppearance="?android:attr/textAppearanceLarge"-->
    <!--android:text="°"-->
    <!--android:id="@+id/textView6"-->
    <!--android:textSize="100sp"-->
    <!--android:textColor="#ff5b91c5"-->
    <!--android:layout_alignParentTop="true"-->
    <!--android:layout_toRightOf="@+id/linearLayout"-->
    <!--android:layout_toEndOf="@+id/linearLayout" />-->

    <LinearLayout
        android:id="@+id/weekDays"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="false"
        android:animateLayoutChanges="true"
        android:background="#ff242424"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/day1Layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/day1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="3dp"
                android:text="..."
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ffffffff" />

            <ImageView
                android:id="@+id/icnDay1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:tint="#ffffffff" />

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/day1Max"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_toLeftOf="@+id/icnDay1"
                    android:layout_toStartOf="@+id/icnDay1"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="..."
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#ffffffff" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#ffffffff" />

                <TextView
                    android:id="@+id/day1Min"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center_vertical"
                    android:layout_toEndOf="@+id/day1Max"
                    android:layout_toRightOf="@+id/day1Max"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="..."
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#ffffffff" />
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/day2Layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/day2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="3dp"
                android:text="..."
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ffffffff" />

            <ImageView
                android:id="@+id/icnDay2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:tint="#ffffffff" />

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/day2Max"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_toLeftOf="@+id/icnDay1"
                    android:layout_toStartOf="@+id/icnDay1"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="..."
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#ffffffff" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#ffffffff" />

                <TextView
                    android:id="@+id/day2Min"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="..."
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#ffffffff" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/day3Layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/day3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="3dp"
                android:text="..."
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ffffffff" />

            <ImageView
                android:id="@+id/icnDay3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:tint="#ffffffff" />

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/day3Max"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_toLeftOf="@+id/icnDay1"
                    android:layout_toStartOf="@+id/icnDay1"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="..."
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#ffffffff" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#ffffffff" />

                <TextView
                    android:id="@+id/day3Min"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="..."
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#ffffffff" />
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/daySpecs"
            android:visibility="gone"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="#ff141414">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="33dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Light rain throughout the week, with temperatures falling to 27°C on Sunday."
                android:id="@+id/summary"
                android:layout_alignParentTop="true"
                android:textColor="#ffffff"
                android:textSize="11sp"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:paddingLeft="3dp"
                android:paddingRight="3dp" />

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight="1"
                android:id="@+id/leftCol"
                android:layout_below="@+id/summary"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:padding="15dp">

                <RelativeLayout
                    android:layout_width="80dp"
                    android:layout_height="fill_parent"
                    android:id="@+id/relativeLayout2"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="7:00"
                        android:id="@+id/textView8"
                        android:textColor="#fffbfbfd"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="17:00"
                        android:id="@+id/textView"
                        android:textColor="#fffbfbfd"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="20:00"
                        android:id="@+id/textView17"
                        android:textColor="#fffbfbfd"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:id="@+id/daySpecsIcn1"
                        android:src="@drawable/cloud"
                        android:tint="#ffffff"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:id="@+id/daySpecsIcn2"
                        android:src="@drawable/cloud"
                        android:tint="#ffffff"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:id="@+id/daySpecsIcn3"
                        android:src="@drawable/cloud"
                        android:tint="#ffffff"
                        android:layout_alignBottom="@+id/textView17"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/relativeLayout"
                    android:layout_toRightOf="@+id/relativeLayout2"
                    android:layout_toEndOf="@+id/relativeLayout2">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:id="@+id/imageView2"
                        android:src="@drawable/basicumbrella"
                        android:tint="#ffffff"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="..."
                        android:id="@+id/dayPrec"
                        android:textSize="12sp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/imageView2"
                        android:layout_toEndOf="@+id/imageView2"
                        android:layout_marginLeft="5dp"
                        android:textColor="#ffffff" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="fill_parent"
                        android:background="@android:color/white"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="27dp"
                        android:layout_marginStart="27dp"
                        android:id="@+id/separator"
                        android:focusable="false" />

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/settings"
        android:background="@drawable/ic_settings"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp" />

    <ImageButton
        android:id="@+id/goToSpecs"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:background="@drawable/ic_arrow_right"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp" />

</RelativeLayout>
