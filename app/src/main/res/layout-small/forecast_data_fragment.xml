<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#424242"
    android:clickable="false"
    tools:context="com.skyweather.DataFragment">

    <TextView
        android:id="@+id/tempvalue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="..."
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#fffdfdfe"
        android:textSize="110sp"
        android:layout_above="@+id/icon"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="°"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#fffdfdfe"
        android:textSize="100sp"
        android:layout_alignTop="@+id/tempvalue"
        android:layout_toRightOf="@+id/tempvalue"
        android:layout_toEndOf="@+id/tempvalue" />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:tint="#ffffffff"
        android:src="@drawable/clearday"
        android:padding="5dp"
        android:layout_above="@+id/Stats"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp" />

    <LinearLayout
        android:id="@+id/Stats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#ff242424"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:shadowColor="#0000ff"
        android:shadowDx="2"
        android:shadowDy="4"
        android:shadowRadius="2"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/weekDays"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:padding="11dp"
            android:text=".."
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ffffffff" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="/"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ffffffff"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:padding="11dp"
            android:text=".."
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ffffffff" />
    </LinearLayout>

    <!--<TextView-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:textAppearance="?android:attr/textAppearanceLarge"-->
    <!--android:text="°"-->
    <!--android:id="@+id/textView6"-->
    <!--android:textSize="100sp"-->
    <!--android:textColor="#ff5b91c5"-->
    <!--android:layout_alignParentTop="true"-->
    <!--android:layout_toRightOf="@+id/linearLayout"-->
    <!--android:layout_toEndOf="@+id/linearLayout" />-->

    <LinearLayout
        android:id="@+id/weekDays"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="false"
        android:animateLayoutChanges="true"
        android:background="#ff242424"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/day1Layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/day1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="3dp"
                android:text="..."
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ffffffff" />

            <ImageView
                android:id="@+id/icnDay1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:tint="#ffffffff" />

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/day1Max"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_toLeftOf="@+id/icnDay1"
                    android:layout_toStartOf="@+id/icnDay1"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="..."
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#ffffffff" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#ffffffff" />

                <TextView
                    android:id="@+id/day1Min"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center_vertical"
                    android:layout_toEndOf="@+id/day1Max"
                    android:layout_toRightOf="@+id/day1Max"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="..."
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#ffffffff" />
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/day2Layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/day2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="3dp"
                android:text="..."
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ffffffff" />

            <ImageView
                android:id="@+id/icnDay2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:tint="#ffffffff" />

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/day2Max"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_toLeftOf="@+id/icnDay1"
                    android:layout_toStartOf="@+id/icnDay1"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="..."
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#ffffffff" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#ffffffff" />

                <TextView
                    android:id="@+id/day2Min"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="..."
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#ffffffff" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/day3Layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/day3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="3dp"
                android:text="..."
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ffffffff" />

            <ImageView
                android:id="@+id/icnDay3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:tint="#ffffffff" />

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/day3Max"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_toLeftOf="@+id/icnDay1"
                    android:layout_toStartOf="@+id/icnDay1"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="..."
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#ffffffff" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#ffffffff" />

                <TextView
                    android:id="@+id/day3Min"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="..."
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#ffffffff" />
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/daySpecs"
            android:paddingLeft="25dp"
            android:paddingStart="25dp"
            android:paddingRight="25dp"
            android:visibility="gone"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="#ff141414">

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight="1"
                android:id="@+id/leftCol"
                android:layout_below="@+id/summary"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="7:00"
                    android:id="@+id/textView8"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textColor="#fffbfbfd" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="17:00"
                    android:id="@+id/textView"
                    android:textColor="#fffbfbfd"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="20:00"
                    android:id="@+id/textView17"
                    android:textColor="#fffbfbfd"
                    android:layout_alignTop="@+id/daySpecsIcn3"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/daySpecsIcn1"
                    android:src="@drawable/cloud"
                    android:layout_marginLeft="12dp"
                    android:layout_marginStart="12dp"
                    android:tint="#ffffff"
                    android:layout_alignBottom="@+id/textView8"
                    android:layout_toRightOf="@+id/textView"
                    android:layout_toEndOf="@+id/textView" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/daySpecsIcn2"
                    android:src="@drawable/cloud"
                    android:tint="#ffffff"
                    android:layout_alignBottom="@+id/textView"
                    android:layout_alignLeft="@+id/daySpecsIcn1"
                    android:layout_alignStart="@+id/daySpecsIcn1" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/daySpecsIcn3"
                    android:src="@drawable/cloud"
                    android:tint="#ffffff"
                    android:layout_alignParentBottom="true"
                    android:layout_alignLeft="@+id/daySpecsIcn2"
                    android:layout_alignStart="@+id/daySpecsIcn2" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/imageView2"
                    android:src="@drawable/basicumbrella"
                    android:tint="#ffffff"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/daySpecsIcn2"
                    android:layout_toEndOf="@+id/daySpecsIcn2"
                    android:layout_marginLeft="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="..."
                    android:id="@+id/dayPrec"
                    android:textSize="12sp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/imageView2"
                    android:layout_toEndOf="@+id/imageView2"
                    android:layout_marginLeft="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="%"
                    android:id="@+id/textView10"
                    android:layout_alignTop="@+id/dayPrec"
                    android:layout_toRightOf="@+id/dayPrec"
                    android:layout_toEndOf="@+id/dayPrec"
                    android:textSize="12sp" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Mostly cloudy throughout the day."
                android:id="@+id/summary"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:padding="10dp"
                android:textColor="#ffffff"
                android:textSize="11sp" />
        </RelativeLayout>

    </LinearLayout>

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/settings"
        android:background="@drawable/ic_settings"
        android:padding="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp" />

    <ImageButton
        android:id="@+id/goToSpecs"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:background="@drawable/ic_info_black_24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp" />

</RelativeLayout>
