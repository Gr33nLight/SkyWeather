<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#90CAF9"
    android:clickable="false"
    tools:context="com.forecast.DataFragment">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/goToMap"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:layout_above="@+id/weekDays">

        <LinearLayout
            android:id="@+id/TemperatureMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView6"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center|right"
            android:layout_marginLeft="35dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tempvalue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="..."
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#fffdfdfe"
                android:textSize="110sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/linearLayout"
                android:layout_toRightOf="@+id/linearLayout"
                android:text="°"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#fffdfdfe"
                android:textSize="100sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/icon"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@+id/TemperatureMain"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:tint="#ffffffff" />

        <LinearLayout
            android:id="@+id/Stats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:background="#424242"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:shadowColor="#0000ff"
            android:shadowDx="2"
            android:shadowDy="4"
            android:shadowRadius="2">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:padding="11dp"
                android:text="..."
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ff8e8e8e" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="/"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ff8e8e8e"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/min"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:padding="11dp"
                android:text="..."
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ff8e8e8e" />
        </LinearLayout>

    </LinearLayout>

    <!--<TextView-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:textAppearance="?android:attr/textAppearanceLarge"-->
    <!--android:text="°"-->
    <!--android:id="@+id/textView6"-->
    <!--android:textSize="100sp"-->
    <!--android:textColor="#ff5b91c5"-->
    <!--android:layout_alignParentTop="true"-->
    <!--android:layout_toRightOf="@+id/linearLayout"-->
    <!--android:layout_toEndOf="@+id/linearLayout" />-->

    <LinearLayout
        android:id="@+id/weekDays"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="false"
        android:animateLayoutChanges="true"
        android:background="#212121"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/day1Layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:visibility="gone">
            <TextView
                android:id="@+id/day1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="3dp"
                android:text="..."
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/button_material_light" />

            <ImageView
                android:id="@+id/icnDay1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:tint="#ffffffff" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/day2Layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/day2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="3dp"
                android:text="..."
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/button_material_light" />

            <ImageView
                android:id="@+id/icnDay2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:tint="#ffffffff" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/day3Layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:visibility="visible">
            <TextView
                android:id="@+id/day3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="3dp"
                android:text="..."
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/button_material_light" />

            <ImageView
                android:id="@+id/icnDay3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:tint="#ffffffff" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/daySpecs"
            android:visibility="visible"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="#F57F17">

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight="1"
                android:id="@+id/leftCol"
                android:layout_below="@+id/summary"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:paddingLeft="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="7:00"
                    android:id="@+id/textView8"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textColor="#fffbfbfd"
                    android:padding="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="12:00"
                    android:id="@+id/textView"
                    android:textColor="#fffbfbfd"
                    android:padding="10dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="..."
                    android:id="@+id/morning"
                    android:textColor="#fffbfbfd"
                    android:padding="10dp"
                    android:layout_alignBottom="@+id/textView8"
                    android:layout_toRightOf="@+id/textView"
                    android:layout_toEndOf="@+id/textView" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="20:00"
                    android:id="@+id/textView17"
                    android:textColor="#fffbfbfd"
                    android:padding="10dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="..."
                    android:id="@+id/afternoon"
                    android:textColor="#fffbfbfd"
                    android:layout_centerVertical="true"
                    android:layout_alignLeft="@+id/morning"
                    android:layout_alignStart="@+id/morning"
                    android:padding="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="..."
                    android:id="@+id/textView18"
                    android:textColor="#fffbfbfd"
                    android:padding="10dp"
                    android:layout_alignTop="@+id/textView17"
                    android:layout_alignLeft="@+id/afternoon"
                    android:layout_alignStart="@+id/afternoon" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Mostly cloudy throughout the day."
                android:id="@+id/summary"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:padding="10dp"
                android:textSize="15sp"
                android:textColor="#ffffff" />
        </RelativeLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/goToMap"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/map" />

</RelativeLayout>
